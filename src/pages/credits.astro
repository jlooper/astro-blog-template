---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Credits';
const description = 'Credits.';
const permalink = `${Astro.site.href}credits`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="credits">
  <main class="container">
    <h1>Credits</h1>
    <p>Powered by <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>.</p>
    <p>Template by <a href="https://www.twitter.com/Charca" target="_blank" rel="noopener">Maxi Ferreira</a>.</p>
  </main>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
